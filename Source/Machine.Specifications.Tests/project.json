{
    "version": "1-*",
    "buildOptions": {
        "nowarn": [
            "169"
        ],
        "define": [
            "DEBUG", // needed for Trace*/Debug.* tests
            "TRACE"// needed for Trace*/Debug.* tests
        ],
		"keyFile": "../Machine.snk"
    },
    "configurations": {
        "Release": {
            "buildOptions": {
                "define": [
                    "CLEAN_EXCEPTION_STACK_TRACE"
                ]
            }
        }
    },
    "testRunner": "nunit",
    "frameworks": {
        "net461": {
            "dependencies": {
                "Microsoft.NETCore.Platforms": {
                    "version": "*",
                    "type":"build"
                }
            }
        },
        "netcoreapp1.0": {
            "imports": ["dotnet"], // for FluentAssertions
            "dependencies": {
                "Microsoft.NETCore.App": {
                    "version": "1.*",
                    "type": "platform"
                },
                "System.Reflection": "4.*",
                "System.Reflection.Extensions": "4.*",
                "System.Reflection.TypeExtensions": "4.*"
            }
        }
    },
    "dependencies": {
        "Machine.Specifications": {
            "target": "project"
        },
        "Example": {
            "target": "project"
        },
        "Example.Random": {
            "target": "project"
        },
        "FluentAssertions": "4.12.0",
        "NUnit": "3.4.1",
        "dotnet-test-nunit":"3.4.0-*"
    }
}